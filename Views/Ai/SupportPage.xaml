<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="ProjetoSuporteTI.Views.Ai.SupportPage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="Feedback de Suporte"
             BackgroundColor="#f5f5f5">

    <Grid RowDefinitions="Auto,*,Auto">
        
        <!-- HEADER -->
        <Frame Grid.Row="0" BackgroundColor="#2c3e50" Padding="20" CornerRadius="0" Margin="0">
            <StackLayout>
                <Label Text="🤖 Feedback de Suporte"
                       FontSize="20"
                       FontAttributes="Bold"
                       TextColor="White"
                       HorizontalOptions="Center" />
                <Label Text="A IA está analisando seu problema..."
                       FontSize="14"
                       TextColor="#ecf0f1"
                       HorizontalOptions="Center" />
            </StackLayout>
        </Frame>

        <!-- CHAT AREA -->
        <ScrollView Grid.Row="1" x:Name="ChatScrollView" Padding="15">
            <StackLayout x:Name="ChatStackLayout" Spacing="10">
                
                <!-- MENSAGEM INICIAL DA IA -->
                <Frame BackgroundColor="White" 
                       BorderColor="#bdc3c7"
                       CornerRadius="10"
                       Padding="15"
                       HorizontalOptions="Start"
                       MaximumWidthRequest="300">
                    <StackLayout>
                        <Label Text="🤖 Assistente de Suporte"
                               FontSize="12"
                               FontAttributes="Bold"
                               TextColor="#2c3e50" />
                        <Label x:Name="WelcomeMessageLabel"
                               Text="Olá! Estou analisando seu problema..."
                               FontSize="14"
                               TextColor="#2c3e50"
                               LineBreakMode="WordWrap" />
                    </StackLayout>
                </Frame>
                
            </StackLayout>
        </ScrollView>

        <!-- INPUT AREA COM BOTÕES DE AÇÃO -->
        <Frame Grid.Row="2" BackgroundColor="#ecf0f1" Padding="10" CornerRadius="0" Margin="0">
            <StackLayout Spacing="10">
                
                <!-- ÁREA DE INPUT DE MENSAGEM -->
                <Grid ColumnDefinitions="*,Auto">
                    <Entry x:Name="MessageEntry"
                           Grid.Column="0"
                           Placeholder="Escrever uma mensagem..."
                           PlaceholderColor="#7f8c8d"
                           TextColor="#2c3e50"
                           BackgroundColor="White"
                           FontSize="14"
                           VerticalOptions="Center"
                           Margin="0,0,10,0" />
                    <Button x:Name="SendButton"
                            Grid.Column="1"
                            Text="▶"
                            FontSize="16"
                            BackgroundColor="#3498db"
                            TextColor="White"
                            CornerRadius="20"
                            WidthRequest="40"
                            HeightRequest="40"
                            Clicked="OnSendClicked" />
                </Grid>
                
                <!-- BOTÃO VOLTAR -->
                <Button x:Name="VoltarButton"
                        Text="⬅️ Voltar"
                        FontSize="14"
                        FontAttributes="Bold"
                        BackgroundColor="#6e7681"
                        TextColor="White"
                        CornerRadius="8"
                        HeightRequest="45"
                        HorizontalOptions="Fill"
                        Clicked="OnVoltarClicked" />

                <!-- BOTÕES DE RESOLUÇÃO -->
                <Label Text="Como foi resolvido seu problema?" 
                       FontSize="16" 
                       FontAttributes="Bold" 
                       TextColor="#2c3e50" 
                       HorizontalOptions="Center" 
                       Margin="0,10,0,5" />
                
                <Grid ColumnDefinitions="*,*" ColumnSpacing="10">
                    <Button x:Name="ResolvidoIAButton"
                            Grid.Column="0"
                            Text="🤖 Resolvido pela IA"
                            FontSize="13"
                            FontAttributes="Bold"
                            BackgroundColor="#9b59b6"
                            TextColor="White"
                            CornerRadius="8"
                            HeightRequest="45"
                            Clicked="OnResolvidoIAClicked" />
                    
                    <Button x:Name="PrecisaSuporteButton"
                            Grid.Column="1"
                            Text="🆘 Suporte vai resolver"
                            FontSize="13"
                            FontAttributes="Bold"
                            BackgroundColor="#e67e22"
                            TextColor="White"
                            CornerRadius="8"
                            HeightRequest="45"
                            Clicked="OnPrecisaSuporteClicked" />
                </Grid>
                
            </StackLayout>
        </Frame>

        <!-- CONFIGURAÇÃO E SAIR (OVERLAY) -->
        <StackLayout Grid.Row="0" Grid.RowSpan="3" 
                     x:Name="ConfigOverlay"
                     BackgroundColor="#80000000"
                     IsVisible="False"
                     VerticalOptions="End"
                     HorizontalOptions="Start"
                     Margin="20">
            <Frame BackgroundColor="White" 
                   CornerRadius="10" 
                   Padding="10"
                   HasShadow="True">
                <StackLayout Spacing="5">
                    <Button Text="⚙️ Configuração"
                            BackgroundColor="Transparent"
                            TextColor="#2c3e50"
                            FontSize="14"
                            Clicked="OnConfigClicked" />
                    <Button Text="🚪 Sair"
                            BackgroundColor="Transparent"
                            TextColor="#e74c3c"
                            FontSize="14"
                            Clicked="OnSairClicked" />
                </StackLayout>
            </Frame>
        </StackLayout>

    </Grid>

</ContentPage>
