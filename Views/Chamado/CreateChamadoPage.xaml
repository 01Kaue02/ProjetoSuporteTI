<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="ProjetoSuporteTI.Views.Chamado.CreateChamadoPage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="Criar Chamado"
             BackgroundColor="#0d1117">

    <ScrollView>
        <StackLayout Padding="20" Spacing="25" VerticalOptions="Center">
            
            <!-- TÍTULO -->
            <Label Text="⚙️ Criar chamado"
                   FontSize="24"
                   FontAttributes="Bold"
                   TextColor="#f0f6fc"
                   HorizontalOptions="Center"
                   Margin="0,0,0,20" />

            <!-- FORMULÁRIO -->
            <Frame BackgroundColor="#161b22" 
                   BorderColor="#30363d" 
                   CornerRadius="12" 
                   Padding="25"
                   HasShadow="True">
                
                <StackLayout Spacing="20">
                    
                    <!-- DESCRIÇÃO DO PROBLEMA -->
                    <StackLayout Spacing="8">
                        <Label Text="Descrição do problema"
                               TextColor="#f0f6fc"
                               FontSize="16"
                               FontAttributes="Bold" />
                        <Editor x:Name="DescricaoEditor"
                                Placeholder="Descreva seu problema aqui..."
                                PlaceholderColor="#6e7681"
                                TextColor="#f0f6fc"
                                BackgroundColor="#21262d"
                                FontSize="16"
                                HeightRequest="120" />
                    </StackLayout>

                    <!-- NÍVEL DE PRIORIDADE -->
                    <StackLayout Spacing="8">
                        <Label Text="Nível de prioridade"
                               TextColor="#f0f6fc"
                               FontSize="16"
                               FontAttributes="Bold" />
                        <Picker x:Name="PrioridadePicker"
                                TextColor="#f0f6fc"
                                BackgroundColor="#21262d"
                                FontSize="16"
                                HeightRequest="50">
                            <Picker.Items>
                                <x:String>Baixo</x:String>
                                <x:String>Médio</x:String>
                                <x:String>Alto</x:String>
                            </Picker.Items>
                        </Picker>
                    </StackLayout>

                    <!-- DISPOSITIVO -->
                    <StackLayout Spacing="8">
                        <Label Text="Dispositivo"
                               TextColor="#f0f6fc"
                               FontSize="16"
                               FontAttributes="Bold" />
                        <Picker x:Name="DispositivoPicker"
                                TextColor="#f0f6fc"
                                BackgroundColor="#21262d"
                                FontSize="16"
                                HeightRequest="50">
                            <Picker.Items>
                                <x:String>Teclado</x:String>
                                <x:String>Mouse</x:String>
                                <x:String>Monitor</x:String>
                                <x:String>Impressora</x:String>
                                <x:String>Outros</x:String>
                            </Picker.Items>
                        </Picker>
                    </StackLayout>

                    <!-- BOTÃO ENVIAR -->
        <Button x:Name="EnviarButton"
                Text="Enviar Solicitação"
                BackgroundColor="#0066cc"
                TextColor="White"
                CornerRadius="10"
                Margin="0,20,0,10"
                Clicked="OnEnviarClicked" />

                    <!-- BOTÃO CANCELAR -->
                    <Button x:Name="CancelarButton"
                            Text="❌ Cancelar chamado"
                            FontSize="16"
                            FontAttributes="Bold"
                            BackgroundColor="#6e7681"
                            TextColor="White"
                            CornerRadius="8"
                            HeightRequest="50"
                            Clicked="OnCancelarClicked"
                            Margin="0,10,0,0" />
                    
                </StackLayout>
            </Frame>
            
        </StackLayout>
    </ScrollView>

</ContentPage>
